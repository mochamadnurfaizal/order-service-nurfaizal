{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6"
       ],
       "target": "es2016",
       "module": "commonjs",
       "rootDir": "./src",
       "moduleResolution": "node",
       "outDir": "./dist",
       "esModuleInterop": true, 
       "strict": true,  
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }